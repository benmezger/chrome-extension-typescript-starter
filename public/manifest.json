{
  "manifest_version": 2,

  "name": "Personal email tag generator",
  "description": "Generate personal email tags based on current tab",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "icons": {
    "16": "icons/email-icon16x16.png",
    "48": "icons/email-icon48x48.png",
    "128": "icons/email-icon128x128.png"
  },

  "browser_action": {
    "default_title": "Personal email tag generator",
    "default_popup": "popup.html",
    "icons": {
      "16": "icons/email-icon16x16.png",
      "48": "icons/email-icon48x48.png",
      "128": "icons/email-icon128x128.png"
    }
  },

  "permissions": [
    "storage",
    "tabs"
  ]
}
