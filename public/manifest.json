{
  "manifest_version": 2,

  "name": "Personal email tag generator",
  "description": "Generate personal email tags based on current tab",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_title": "Personal email tag generator",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "tabs"
  ]
}
